<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "bike.png" %>
    <% end %>
    <div class="nav-item-title">
      <a href="/">
        <h2>Next</h2>
        <h2>Triathlon</h2>
      </a>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <a> <%= link_to "My account", "/profiles/#{current_user.id}" %> &nbsp / &nbsp </a>
          <a> <%= link_to "Add a race", "/races/new" %> &nbsp / &nbsp </a>
          <a> <%= link_to "Log out", "/users/sign_out", data: {turbo_method: :delete} %> </a>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-primary btn-sign-up" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-flat btn-login" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
