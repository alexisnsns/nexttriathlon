<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "bike.png" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if action_name == "index" %>
      <%= render "search_form" %>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <%= link_to "Your account", "/profiles/#{current_user.id}" %> &nbsp
          <%= link_to "Add a race", "/races/new" %> &nbsp
          <%= link_to "Log out", "/users/sign_out", data: {turbo_method: :delete} %>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-primary btn-sign-up" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-flat btn-login" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
