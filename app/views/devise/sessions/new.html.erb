<div class="container">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "username or email" } %>
      <%= f.input :password,
              required: false,
              input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-primary"  %>
    </div>
  <% end %>
  <br>
  <p>Forgot your password? <%= link_to "Recover password", new_password_path(resource_name) %></p>
  <p>You don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
</div>
